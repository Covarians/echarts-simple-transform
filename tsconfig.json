{
    "compilerOptions": {
        "target": "ES3",
        "ignoreDeprecations": "5.0", // Add this line to silence the warning
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "removeComments": true,
        "sourceMap": true,

        // https://github.com/ezolenko/rollup-plugin-typescript2/issues/12#issuecomment-536173372
        "moduleResolution": "node",

        "declaration": true,
        "declarationMap": false,

        "importHelpers": true,

        "pretty": true,

        "outDir": "lib"
    },
    "include": [
        "src/**/*.ts"
    ]
}